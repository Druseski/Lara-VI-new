@model IEnumerable<Lara_VI.Entities.Category>


<div class="container p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp; Create new</a>
        </div>
    </div>

    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td width="50%">@category.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-route-Id="@category.Id" asp-action="Edit" class="btn btn-primary mx-2"><i class="far fa-edit"></i>&nbsp; Edit</a>
                                <a asp-controller="Category" asp-route-Id="@category.Id" asp-action="Delete" class="btn btn-danger mx-2"><i class="far fa-trash-alt"></i>&nbsp; Delete</a>
                                <a asp-controller="Category" asp-route-Id="@category.Id" asp-action="Details" class="btn btn-info mx-2"><i class="fas fa-info-circle"></i> &nbsp;Details</a>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>

        </table>
    }
    else
    {
        <p>No Category Exist</p>
    }
</div>
