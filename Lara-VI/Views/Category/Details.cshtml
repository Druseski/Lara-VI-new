@model Lara_VI.Entities.Category

<form method="post">
    <div class="border p-3 bg-white">
        <input asp-for="Id" hidden />
        <div class="form-group row py-2">
            <h2 class="text-info pl-3">Details</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group rowpy-2">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />      
                    </div>
                </div>

                <div class="form-group rowpy-2">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary w-100"><i class="far fa-edit"></i>&nbsp; Edit</a>
                        </div>

                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i>&nbsp; Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
               
            </div>
        </div>
    </div>
</form>

