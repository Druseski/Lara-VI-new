@model Lara_VI.Entities.Product
@using Lara_VI.Repositories.Utility
@using Lara_VI.Entities.ViewModels

<div class="col-lg-4 col-md-6 pb-4 cardbody filter @Model.Category.Name.Replace(' ','_') ">
    <form method="post">
        <input asp-for="@Model.Id" hidden />
        <div class="card ">
            <div class="imgBx">
                <img src="@WebConstants.ImagePath@Model.Image" />
            </div>
            <div class="content">
                <div class="card-body px-3 pt-3 pb-1 row">
                    <div class="col-7"><label class="float-left">@Model.Name</label></div>
                    <div class="col-5"><label class="float-right"><span class="text-info h5">@string.Format(Model.Price.ToString())</span>MKD</label> </div>
                </div>
                <div class="card-body p-1 px-3 row">
                    <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                        @Model.ShortDescription
                    </div>
                </div>
                <div class="card-body p-1 px-3 row">
                    <div class="col-12 p-1">

                        <a asp-action="Details" asp-controller="Home" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
                    </div>
                </div>
                
            </div>
        </div>
    </form>
    

</div>

