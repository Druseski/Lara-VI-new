@model Lara_VI.Entities.ViewModels.HomeDetailsProductViewModel
@using Lara_VI.Repositories.Utility
<div class="container">
    <form method="post">
        <input asp-for="@Model.Product.Id" hidden />
        <div class="container backgroundWhite pt-4">
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Product.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-warning">@((Model.Product.Price).ToString()) MKD</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@WebConstants.ImagePath@Model.Product.Image" style="width:100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <span class="badge p-3 border " style="background-color:gray;color:black">@Model.Product.Category.Name</span>
                                        <h3 class="text-success"></h3>
                                        <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
                                    </div>
                                    @if (Model.Product.ByPeace)
                                    {
                                        <div class="col-12">
                                            By Peace:
                                        </div>
                                        <div class="col-12">
                                            @if (Model.ExistInCart)
                                            {
                                                <div class="col-4">
                                                    <label asp-for="@Model.Product.TempByWeight">Peace</label>
                                                </div>
                                                <div class="col-8">
                                                    <input asp-for="@Model.Product.TempByPeace" disabled class="form-control" />

                                                </div>
                                            }
                                            else
                                            {
                                                <div class="col-4">
                                                    <label asp-for="@Model.Product.TempByWeight">Enter Amount</label>
                                                </div>
                                                <div class="col-8">
                                                    <input asp-for="@Model.Product.TempByPeace" class="form-control" />
                                                    <span asp-validation-for="@Model.Product.TempByPeace" class="text-danger"></span>
                                                </div>
                                            }

                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-12">
                                            By Kg:
                                        </div>
                                        <div class="col-12">
                                            @if (Model.ExistInCart)
                                            {
                                                <div class="col-4">
                                                    <label asp-for="@Model.Product.TempByWeight">Kg</label>
                                                </div>
                                                <div class="col-8">
                                                    <input asp-for="@Model.Product.TempByWeight" disabled class="form-control" />
                                                    
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="col-4">
                                                    <label asp-for="@Model.Product.TempByWeight">Enter Amount</label>
                                                </div>
                                                <div class="col-8">
                                                    <input asp-for="@Model.Product.TempByWeight" class="form-control" />
                                                    <span asp-validation-for="@Model.Product.TempByWeight" class="text-danger"></span>
                                                </div>
                                            }
                                            
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            @if (Model.ExistInCart)
                            {
                                <a asp-action="RemoveFromCart" asp-route-id="@Model.Product.Id" class="btn btn-warning btn-square form-control btn-lg" style="height:50px;">Remove From Cart</a>
                            }
                            else
                            {
                                <button type="submit" asp-route-id="@Model.Product.Id" class="btn btn-info form-control btn-lg" style="height:50px;">Add to Cart</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>